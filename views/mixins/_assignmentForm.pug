mixin storeForm(store = {})
  form(action=`/add/assignment/${store._id || ''}` method="POST" class="card" enctype="multipart/form-data")
    label(for="name") Name
    input(type="text" name="name" value=store.name)
    label(for="description") Description
    textarea(name="description")= store.description
    label(for="onDate") Date
    input(type="date" name="onDate" value= h.moment(store.onDate).format(MM/DD/YYYY))
    //- Image Upload
    label(for="photo") Photo
      input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
      if store.photo
        img(src=`/uploads/${store.photo}`, alt=store.name width=200)
    input(type="submit" value="Save â†’" class="button")
