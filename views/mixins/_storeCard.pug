mixin storeCard(assesment = {})
  .store
    .store__hero
      .store__actions
        if user && assesment.author.equals(user._id)
          .store__action.store__action--edit
            - const editUrl = `/${assesment.dataModel}s/${assesment._id}/edit` 
            a(href= editUrl)
              != h.icon('pencil')
            - const def = 'store.png'
      if assesment.photo && assesment.photo.length!=0
        img(src=`/uploads/${assesment.photo}`)
      else
        img(src='/uploads/store.png')
      h2.title
        - const hUrl = `/${assesment.dataModel}/${assesment.slug}`
        a(href= hUrl) #{assesment.name}
        
    .store__details
      - const ondate = h.moment(assesment.onDate).fromNow();
      p
        strong
          em #{ondate}
      p= assesment.description.split(' ').slice(0, 25).join(' ')
